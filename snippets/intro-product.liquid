<div class="jss16 jss76">
  <div class="jss37" style="text-align: center;">
    <h1 class="jss28">
      <img src="{{ settings.logo | img_url: '200x' }}" alt="logo" class="jss6">
    </h1>
  </div>

  {% assign sections = product.description | split: "#secção" %}
  {% for section in sections %}
  {% assign lines = section | split: "**" %}
  {% if lines.size > 0 %}
  <section class="jss96" id="section-intro-{{forloop.index}}">
    <div class="jss85">
      <div class="jss86">
        {% for line in lines %}
        {% if line.size > 0 %}
        {% if line contains "titulo:" %}
        <h2 class="jss41 jss44 jss54">{{ line | remove: "titulo:" }}</h2>
        {% elsif line contains "legenda:" %}
        <h3 class="jss40 jss46 jss54">{{ line | remove: "legenda:" }}</h3>
        {% elsif line contains "texto:" %}
        <p class="jss40 jss47 jss54 jss87">{{ line | remove: "texto:" }}</p>
        {% elsif line contains "imagem-baixo:" %}
        {% assign line = "imagem-baixo:123" %}
        {% assign number = line | split: ":" | last | strip | plus: -1 %}
        <picture class="jss92">
          <source media="(min-width: 600px)" srcset="{{ product.images[number] | image_url }}">
          <img alt="{{ product.title }}" src="{{ product.images[number] | image_url }}">
        </picture>
        {% endif %}
        {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}
  {% endfor %}

  <section class="jss135">
    <div class="jss141">
      <img src="{{ 'star.svg' | asset_url }}" class="jss147">
      <img src="{{ 'star.svg' | asset_url }}" class="jss147">
      <img src="{{ 'star.svg' | asset_url }}" class="jss147">
      <img src="{{ 'star.svg' | asset_url }}" class="jss147">
      <img src="{{ 'star.svg' | asset_url }}" class="jss147">
