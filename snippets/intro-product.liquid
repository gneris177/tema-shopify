<style>
  .jss96 {
    width: 100%;
    overflow: hidden;
    position: relative;
    border-top: 1px solid #e5e5e5;
  }
  .jss16 {
    width: 100%;
    margin: auto;
  }
  @media (min-width:960px) {
    .jss76 {
      width: 100vw;
      margin-left: calc((100% - 100vw) / 2);
    }
  }
  .jss6 {
    width: 87.5px;
